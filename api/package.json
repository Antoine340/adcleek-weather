{
  "name": "test_candidat_meteo_ts",
  "version": "1.0.0",
  "description": "Weather API backend",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm run clean && pnpm exec tsc",
    "dev": "nodemon src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint '{src,tests}/**/*.{js,ts}'",
    "format": "prettier --ignore-path .gitignore --write '{src,tests}/**/*.{ts,json}'",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:test": "docker-compose -f docker-compose.test.yml run --rm weather-api-test",
    "docker:dev": "chmod +x scripts/docker-dev.sh && ./scripts/docker-dev.sh"
  },
  "keywords": [
    "weather",
    "api",
    "typescript",
    "tdd"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@weather-app/shared": "file:../shared",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "nodemon": "^3.1.10",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/sqlite3": "^5.1.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2"
  }
}
